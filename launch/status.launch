<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">
    
    <node name="mrs_status" pkg="mrs_status" type="status.py" output="screen" respawn="true">
      
      <rosparam file="$(find mrs_status)/config/status.yaml" />

    </node>
  
  </group>
</launch>
